{%extends 'base.jinja'%}{%block content%}
<h1>{{title}}</h1>
<form action="/" method="post"> {#change too /book#}
    <label for="title">Title</label>
    <input type="text" name="title" id="title"><br/>

    <label for="author">Author</label>
    <input type="text" name="author" id="author"><br/>

    <label for="genre">Genre</label>
    <input type="text" name="genre" id="genre"><br/>

    <label for="checked_out">Checked out</label><br>
    <input type="radio" id="checked_out" name="checked" value="true">

    <label for="checked_in">Checked in</label><br>
    <input type="radio" id="checked_in" name="checked" value="false">

    <input type="submit" value="Submit">
</form>
{% endblock content %}