{%extends 'base.jinja'%}{%block content%}
<h1>{{book.title}}</h1>
<h3>{{book.author}}</h3>
<p>{{book.genre}}</p><hr/>
{%if book.blurb|length >0%}
    <p>{{book.blurb[0]}}</p>
{% endif %}
<ul>
    {%for copy in book.checked_out%} {# buttons to check in/out, add & remove copies #}
    <li>
        <label>copy {{loop.index}}</label>
        {%if copy%}
            <span>~checked out~</span>
        {%endif%}
        <form action="/books/{{index}}/{{loop.index0}}" method="post">
            <input type="submit" value="check {%if copy%}in{%else%}out{%endif%}">
        </form>
        <form action="/books/{{index}}/{{loop.index0}}/delete" method="post"><input type="submit" value="delete copy"></form>
    </li>
    {% endfor %}
</ul>
<br/>
<form action="/books/{{index}}/add" method="post"><input type="submit" value="add copy"></form>
{%endblock content%}